<?import org.controlsfx.control.textfield.CustomTextField?>

<AnchorPane prefHeight="800.0" prefWidth="1100.0" styleClass="_background" stylesheets="@styles/ListView.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.ListViewController">
   <children>
      <Label alignment="TOP_LEFT" layoutX="34.0" layoutY="45.0" prefHeight="58.0" prefWidth="383.0" styleClass="_nameData" stylesheets="@styles/ListView.css" text="NAMES" textAlignment="CENTER" />
      <JFXListView fx:id="_nameListView" layoutX="34.0" layoutY="144.0" onMouseClicked="#onClick" prefHeight="603.0" prefWidth="310.0" styleClass="_nameListView" />
      <JFXListView fx:id="_selectListView" layoutX="356.0" layoutY="144.0" onMouseClicked="#clearSelected" prefHeight="603.0" prefWidth="371.0" styleClass="_nameListView" />
      <VBox layoutX="769.0" layoutY="142.0" prefHeight="392.0" prefWidth="261.0">
         <children>
            <JFXButton fx:id="_practiceButton" buttonType="RAISED" onAction="#practiceButton" prefHeight="84.0" prefWidth="268.0" styleClass="_button" text="PRACTICE" />
            <Button mnemonicParsing="false" onAction="#clearSelection" prefHeight="84.0" prefWidth="268.0" styleClass="_button" stylesheets="@styles/ListView.css" text="CLEAR" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                    <ToggleButton fx:id="_randomButton" onAction="#onRandom" prefHeight="84.0" prefWidth="155.0" styleClass="_sortingButton" stylesheets="@styles/ListView.css" text="Random" />
                    <ToggleButton fx:id="_sortedButton" onAction="#onSort" prefHeight="84.0" prefWidth="155.0" styleClass="_sortingButton" stylesheets="@styles/ListView.css" text="Sort" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#importText" prefHeight="58.0" prefWidth="110.0" style="-fx-font-size: 15px;" styleClass="_backButton" text="Import" />
         </children>
      </VBox>
      <Button layoutX="933.0" layoutY="684.0" mnemonicParsing="false" onAction="#goBack" prefHeight="58.0" prefWidth="110.0" styleClass="_backButton" text="Back" />
      <CustomTextField fx:id="_searchBox" editable="true" layoutX="34.0" layoutY="83.0" onAction="#doSearch" prefHeight="40.0" prefWidth="490.0" promptText="Combine names..." />
   </children>
</AnchorPane>
